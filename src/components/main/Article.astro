---
import Prose from '../Prose.astro'
import ArticleSection from './ArticleSection.astro'
import ArticleTitle from './ArticleTitle.astro'

export interface Props {
  section?: string;
  title?: string;
}

const { section = 'xmen are cool', title = "It's good to be the king" } = Astro.props as Props;

---
<article>
  <header class="mb-9 space-y-1">
    {section && (<ArticleSection section={section} />)}
    {title && (<ArticleTitle title={title} />)}
  </header>
  <Prose>
    <slot />
  </Prose>
</article>
